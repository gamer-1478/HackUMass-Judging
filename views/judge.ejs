<div class="reg-container">
    <div class="reg-form-container">

        <form action="/dashboard" method="post">
            <h1 id="form-title">Table Number: <span id="info" style="width: min-content;">
                    <%=currentTable%>
                </span>
            </h1>
            <h1 id="form-title">Project Name: <span id="info" style="width: min-content;">
                    <%=currentProject%>
                </span>
            </h1>

            <h1 id="form-title">Project Category: <span id="info-category" style="width: min-content;">
                    <%=currentProjectCategory%>
                </span>
            </h1>

            <div class="field">
                <label for="score1">Innovation</label>
                <input type="number" value="0" name="score1" id="score1" min="0" max="10" placeholder="Enter a value between 0-10" onkeyup="if (value < 0) value = 0; else if (value > 10) value = 10;" >
            </div>
            <div class="field">
                <label for="score2">Functionality</label>
                <input type="number" value="0" name="score2" id="score2" min="0" max="10" placeholder="Enter a value between 0-10" onkeyup="if (value < 0) value = 0; else if (value > 10) value = 10;">
            </div>
            <div class="field">
                <label for="score3">Practicality</label>
                <input type="number" value="0" name="score3" id="score3" min="0" max="5" placeholder="Enter a value between 0-5"  onkeyup="if (value < 0) value = 0; else if (value > 5) value = 5;">
            </div>
            <div class="field">
                <label for="score4">Presentation</label>
                <input type="number" value="0" name="score4" id="score4" min="0" max="10" placeholder="Enter a value between 0-10"  onkeyup="if (value < 0) value = 0; else if (value > 10) value = 10;">
            </div>
            <div class="field">
                <label for="score5">QnA</label>
                <input type="number" value="0" name="score5" id="score5" min="0" max="5" placeholder="Enter a value between 0-5" onkeyup="if (value < 0) value = 0; else if (value > 5) value = 5;">
            </div>
            <div class="field">
                <label for="score6">Category Fit</label>
                <input type="number" value="0" name="score6" id="score6" min="0" max="10" placeholder="Enter a value between 0-10" onkeyup="if (value < 0) value = 0; else if (value > 10) value = 10;">
            </div>
            <div class="field">
                <label for="comments">Any Comments?</label>
                <input type="text" value="Hi" name="comments" id="comments" placeholder="Enter some text">
            </div>
            <button type="submit" class="reg-submit">To Next Project â†’</button>
        </form>

    </div>
</div>

<style>
    #form-title {
        color: white;
        font-size: 22pt;
    }

    #info {
        color: var(--violet);
        font-size: 48px;
        font-weight: 400;
    }

    #info-category {
        color: var(--violet);
        font-size: 40px;
        font-weight: 400;
    }

    .reg-submit {
        background-color: var(--violet);
        border: none;
        color: white;
        padding: 10px 20px;
        text-align: center;
        font-size: 24px;
        border-radius: 10px;
        margin: 40px 2px 4px;
        cursor: pointer;
        width: 300px;
    }

    .reg-container {
        background-color: var(--black);
        display: flex;
        align-items: center;
        justify-content: space-evenly;
        width: 100%;
    }

    .reg-form-container {
        padding: 1rem;
        border-radius: 1rem;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: left;
    }

    .reg-form-container form {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 30px;
    }

    .reg-form-container label {
        color: var(--grey);
        font-size: 14px;
        margin-bottom: 0.8rem;
    }

    .reg-form-container h1 {
        color: var(--violet);
        text-align: center;
        font-size: 52px;
        font-weight: 400;
        margin-bottom: 20px;
    }

    .field {
        margin-bottom: 1rem;
        display: flex;
        flex-direction: column;
    }

    .field input {
        transition: border-color 0.3s ease-out;
