        padding: 0.8rem 1rem;
        border: none;
        outline: none;
        background-color: transparent;
        color: var(--white);
        outline: 0;
        border-width: 0 0 2px;
        width: 30vw;
        border: 2px solid var(--text);
        outline: none;
        border-radius: 15px;
    }

    .field input:focus {
        border-color: var(--violet);
    }

    @media screen and (width < 798px) {
        .reg-form-container {
            width: 90vw;
            margin: 0;
        }

        .reg-form-container form {
            width: 90vw;
            padding: 5vw;
        }

        .field,
        .field input {
            width: 90vw;
        }
    }
</style>